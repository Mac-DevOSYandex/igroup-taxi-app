{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@ig/*": ["./src/app/*"],
      "@env/*": ["./src/environments/*"],
      "@ass/*": ["./src/assets/*"],
      "@theme/*": ["./src/theme/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2017", "dom"]
  }
}
